<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x.mvp_kaoshi.ui.activity.ZhuyemianActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/mMyfragment"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </FrameLayout>


        <!--底部-->
        <LinearLayout
            android:background="#ffffff"
            android:id="@+id/mLl_all"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">



            <!--底部1-->
            <LinearLayout
                android:id="@+id/mLl_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_drawer_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信" />

            </LinearLayout>
            <!--底部2-->
            <LinearLayout
                android:id="@+id/mLl_wy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_menu_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网易" />

            </LinearLayout>

            <!--底部3-->
            <LinearLayout
                android:id="@+id/mLl_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:src="@mipmap/ic_menu_video" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频" />
            </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



